{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2023"],
    "module": "ESNext",

    "moduleResolution": "node",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./infra/*", "sst.config.ts"],
  "references": [
    { "path": "./packages/types/tsconfig.json" },
    { "path": "./packages/frontend/tsconfig.json" },
    { "path": "./packages/backend/tsconfig.json" }
  ]
}
